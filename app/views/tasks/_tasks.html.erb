<ul class="list-unstyled">
  <%= tasks.each do |task| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 50 })%>" alt="">
      <div class="media-body">
        <div>
          <%= task.cotent %>
        </div>
      </div>
    </li>
    <% end %>
    <%= paginate tasks %>
</ul>