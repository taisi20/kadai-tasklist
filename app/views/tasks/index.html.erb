<h1>タスク一覧</h1>
<% if @tasks.any? %>
<!-- index_table -->
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>スタッツ</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task|%>
      <tr>
        <td><%= link_to task.id, task %></td>
        <td><%= task.status %></td>
        <td><%= task.content %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<!-- new_button -->
<%= link_to "新規タスクの登録",new_task_path, class: "btn btn-primary" %>