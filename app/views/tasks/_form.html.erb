<%= form_with(model: task, local: true) do |f| %>
<!--エラーメッセージ-->
<% if task.errors.any? %>
<div id="ellor_exalanation" class="alert alert-warning">
  <ul>
    <% task.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
    <% end %>
  </ul>
</div>
<% end %>
<!-- form -->
<div class="row">
  <div class="col-3">
    <div class="form-group">
    <%= f.label :status, "スタッツ" %>
    <%= f.text_field :status, class: "form-control" %>
  </div>
  </div>
  <div class="col-9">
    <div class="form-group">
    <%= f.label :content, "タスク" %>
    <%= f.text_field :content, class: "form-control" %>
  </div>
  </div>
</div>
<%= f.submit "登録", class: "btn btn-primary col-4" %>
<% end %>